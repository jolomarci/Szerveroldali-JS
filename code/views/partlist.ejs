<%- include('header', pagetype="parts") %>

<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10 mt-5">
            <div class="card text-center">
                <h4 class="card-header">Alkatrészek</h4>
                <div class="container">
                    <table class="table mt-3 table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Gyártó</th>
                                <th scope="col">Alkatrész</th>
                                <th scope="col">Megjegyzés</th>
                                <th scope="col">Ár</th>
                                <th scope="col">Mennyiség</th>
                                <th scope="col">Kosárba</th>
                                <% if(loggedin) { %>
                                <th scope="col">Műveletek</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% part.forEach(function(onePart){ %>
                            <tr>
                                <td>
                                    <%= onePart.partBrand %>
                                </td>
                                <td>
                                    <%= onePart.partType %>
                                </td>
                                <td>
                                    <%= onePart.comment %>
                                </td>
                                <td>
                                    <%= onePart.price %>
                                </td>
                                <td>
                                    <input type="number" value="1" min="1" max="100" step="1" />
                                </td>
                                <td><button type="submit" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-plus"></i></button>
                                </td>
                                <% if(loggedin) { %>
                                <td>
                                    <a class="btn btn-dark btn-sm" href="/part/<%= onePart._carid %>/edit/<%= onePart._id %>" role="button">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/part/<%= onePart._carid %>/del/<%= onePart._id %>" role="button">
                                        <i class="fas fa-times"></i>
                                    </a>

                                    <a class="btn btn-success btn-sm" href="/part/ <%= onePart._carid %>/new" role="button">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col my-3"></div>
    </div>
</div>

<%- include('footer') %>